#!/usr/bin/env ruby

def sync(path, options = {})
  cmd = "rsync -azv --progress --delete #{'--relative' if options[:relative]} #{path} #{ENV['HOME']}/Dropbox"
  puts cmd
  system cmd
end

sync ".ssh", :relative => true
sync ".gem/credentials", :relative => true
sync ".gitconfig", :relative => true
sync "Library/Keychains/login.keychain"
