# changing directory to code project
function c { cd ~/code/$1; }
function h { cd ~/$1; }

# misc
alias reload='. ~/.bash_profile'
alias quit='exit'
alias ..='cd ..'
alias up='cd ..'
# alias t='tail -F -n 100'
alias e='echo'

# kill
alias k='kill'
alias k9='kill -9'
function ka { kill $(ps xc | grep -wi "$*" | awk '{print $1}'); }
function ka9 { kill -9 $(ps xc | grep -wi "$*" | awk '{print $1}'); }

# textmate
function m { mate ${*:-.}; }
function cm { cd ~/code/$1; mate .; }

# ls
alias l='ls -1'
alias ll='ls -lh'
alias la='ls -lah'
alias lh='ls -la | grep ":[0-9]* \."' # show only hidden files

# git
alias g='git'
alias gpll='git pull'
alias gpsh='git push'
alias gd='git diff'
alias gds='git diff --stat'
alias gdc='git diff --cached'
alias gdcs='git diff --cached --stat'
alias gdp='git diff master~1'
alias gdps='git diff --stat master~1'
alias gc='git commit'
alias gci='git commit'
alias gco='git checkout'
alias gb='git branch'
alias gs='git status'
alias gst='git status'
alias grm="git status | grep -A 1000 'Changed but not updated' | grep deleted | awk '{print \$3}' | xargs git rm"
function ga { git add ${*:-.}; }
alias gl='git log --graph "--pretty=format:%C(yellow bold)%h%Creset by %C(red)%an%Creset (%ar)%C(cyan bold)%d%Creset%n%s%n%b" --all'

# svn
alias s='svn'
alias sl='svn up'
alias si='svn commit'
alias sci='svn commit'

# rails
function sc() {
  if [ -x script/rails ]; then
    script/rails console
  elif [ -x script/console ]; then
    script/console
  else
    echo "no script/rails or script/console found" >&2
  fi
}

function ss() {
  if [ -x script/rails ]; then
    script/rails server
  elif [ -x script/server ]; then
    script/server
  else
    echo "no script/rails or script/server found" >&2
  fi
}
alias sg='script/generate'
alias sd='script/destroy'
alias tlog='tail -f log/development.log'
alias migrate='rake db:migrate db:test:clone'
alias rst='touch tmp/restart.txt'

# commands starting with % for pasting from web
alias %=' '

# jruby, jrails
alias j='jruby -S'
alias jss='jruby ./script/server'
alias jsc='jruby ./script/console'

# gc rails
alias gcruby='/Users/edgarsbeigarts/rubygc/bin/ruby'
alias gcrake='/Users/edgarsbeigarts/rubygc/bin/rake'
alias gcgem='/Users/edgarsbeigarts/rubygc/bin/gem'
alias gcirb='/Users/edgarsbeigarts/rubygc/bin/irb'
alias gcrails='/Users/edgarsbeigarts/rubygc/bin/rails'

# proxy
alias psudo='sudo env http_proxy=http://proxy.alise.lv:8080'
alias p='echo $http_proxy'
alias pon='export http_proxy=http://proxy.alise.lv:8080'
alias poff='unset http_proxy'

# sqlplus with readline
alias sqlplus="rlwrap sqlplus"

# newtab
alias t='osascript ~/.bash/scripts/newtab.scpt `pwd` > /dev/null'
